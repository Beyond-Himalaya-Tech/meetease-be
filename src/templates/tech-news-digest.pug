doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 20px;
      }
      .container {
        max-width: 600px;
        margin: auto;
        background-color: #ffffff;
        padding: 30px;
        border-radius: 6px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      }
      .header {
        text-align: center;
        margin-bottom: 25px;
        border-bottom: 2px solid #2563eb;
        padding-bottom: 15px;
      }
      .header h1 {
        margin: 0;
        font-size: 28px;
        color: #2563eb;
      }
      .header p {
        margin: 5px 0 0 0;
        color: #666666;
        font-size: 14px;
      }
      .intro {
        font-size: 15px;
        line-height: 1.6;
        color: #333333;
        margin-bottom: 25px;
      }
      .article {
        background-color: #f9f9f9;
        padding: 20px;
        border-left: 4px solid #2563eb;
        margin-bottom: 20px;
        border-radius: 4px;
      }
      .article-title {
        font-size: 18px;
        font-weight: bold;
        color: #2563eb;
        margin: 0 0 10px 0;
        line-height: 1.4;
      }
      .article-title a {
        color: #2563eb;
        text-decoration: none;
      }
      .article-title a:hover {
        text-decoration: underline;
      }
      .article-meta {
        font-size: 12px;
        color: #999999;
        margin-bottom: 10px;
      }
      .article-snippet {
        font-size: 14px;
        line-height: 1.6;
        color: #555555;
        margin: 10px 0;
      }
      .article-link {
        display: inline-block;
        margin-top: 10px;
        color: #2563eb;
        text-decoration: none;
        font-weight: bold;
        font-size: 14px;
      }
      .article-link:hover {
        text-decoration: underline;
      }
      .footer {
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #dddddd;
        font-size: 13px;
        color: #999999;
        text-align: center;
      }
      .footer a {
        color: #2563eb;
        text-decoration: none;
      }
